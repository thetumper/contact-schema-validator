{
  "name": "contact-schema-validator",
  "version": "1.0.0",
  "description": "Contact Schema Validator",
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://github.com/thetumper/contact-schema-validator.git",
  "repository": {
    "type": "git",
    "url": "https://github.com/thetumper/contact-schema-validator.git"
  },
  "scripts": {
    "prettier": "prettier --write '{src,lib,test-lib}/**/*.js' 'webpack.config.js'",
    "lint": "eslint src lib test-lib",
    "lint-fix": "eslint src lib test-lib --fix",
    "test": "jest --coverage --verbose",
    "test-one": "jest --watch -t",
    "int-test": "jest --testRegex=\\.e2e\\.js$"
  },
  "devDependencies": {
    "@babel/core": "7.6.4",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.3",
    "@babel/register": "7.6.2",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "copy-webpack-plugin": "5.0.4",
    "eslint": "6.6.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.5.0",
    "eslint-plugin-import": "2.18.2",
    "jest": "24.9.0",
    "jest-raw-loader": "1.0.1",
    "prettier": "1.18.2",
    "raw-loader": "3.1.0",
    "webpack": "4.41.2",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "@babel/runtime": "7.6.3",
    "ajv": "6.10.2",
    "js-yaml": "3.13.1",
    "lodash": "4.17.15"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8.10"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "retainLines": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-underscore-dangle": 0,
      "prefer-destructuring": 0,
      "no-use-before-define": [
        "error",
        {
          "functions": false
        }
      ],
      "no-await-in-loop": 0,
      "no-plusplus": "off",
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabeledStatement",
        "WithStatement"
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "jest": {
    "bail": 5,
    "clearMocks": true,
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "setupFiles": [
      "./test-lib/mock-env.js"
    ],
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "yaml"
    ],
    "transform": {
      "\\.js$": "babel-jest",
      "\\.yaml$": "jest-raw-loader"
    }
  }
}
